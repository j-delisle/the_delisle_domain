
{% extends "base.njk" %}
{% block postContent %}
<div class="posts-container">
  <ol>
    {% for post in collections.blogs | reverse %}
    <li class="container mx-auto flex justify-between p-4 border-secondary_text border-b-2 hover:bg-light">
      <strong>
        <a href="{{ post.url }}">
          <h1 class="text-primary font-display">{{ post.data.title }}</h1>
          <h3 class="pt-4 font-body text-sm">{{ post.data.description }}</h3>
        </a>
      </strong>
      <div class="ml-8 w-32 text-right">
        <time class="font-body text-sm" datetime="{{ post.date.toString() }}">{{ post.date.toDateString() }}</time>
      </div>
    </li>
    {% endfor %}
  </ol>
</div>
{% endblock %}